<fieldset>
  <%= form_for post do |form| %>

    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div>
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>

    <div>
      <%= form.collection_select :location_id, Location.all, :id, :name, prompt: true %>
    </div>

    <div>
      <%= form.collection_select :category_id, Category.all, :id, :name, prompt: true %>
    </div>

    <div>
      <%= form.label :url, "Image url: " %>
      <%= form.text_field :url %>
    </div>

    <div>
      <%= form.submit "Post" %>
    </div>

  <% end %>
</fieldset>
